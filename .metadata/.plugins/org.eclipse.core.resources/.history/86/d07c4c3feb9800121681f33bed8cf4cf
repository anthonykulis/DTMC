#include "graph.h"

#include <stdlib.h>
#include <stdio.h>

int main(){

	fprintf(stdout, "Pushing  E1 N0 W1 S1\n");
	int dir = get_next_direction(1, 0, 1, 1);
	fprintf(stdout, "stack pointer: %d\n", get_sr());
	fprintf(stdout, "Resulting direction: %d\n\n", dir);

	fprintf(stdout, "Pushing  E0 N1 W1 S1\n");
	dir = get_next_direction(0, 1, 1, 1);
	fprintf(stdout, "stack pointer: %d\n", get_sr());
	fprintf(stdout, "Resulting direction: %d\n\n", dir);

	fprintf(stdout, "Pushing  E0 N0 W0 S1\n");
	dir = get_next_direction(0, 0, 0, 1);
	fprintf(stdout, "stack pointer: %d\n", get_sr());
	fprintf(stdout, "Resulting direction: %d\n", dir);

	fprintf(stdout, "Should be back tracking now: %d\n", get_hd());

	return EXIT_SUCCESS;

}
