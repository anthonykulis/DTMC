#include "parallax_gyro.h"

int init(uint8_t slave_address){

	bcm2835_i2c_begin();
	bcm2835_i2c_setSlaveAddress(slave_address);

	int i = 0;
	for(; i < INIT_BUFF_LEN; i++){
		if(bcm2835_i2c_write(&init_buff[i]), 2) return 0;
	}

	return 1;
}
