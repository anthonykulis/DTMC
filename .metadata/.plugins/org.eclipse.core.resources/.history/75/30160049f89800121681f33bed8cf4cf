#ifndef GRAPH_H_
#define GRAPH_H_

#define _G_STACK_SIZE 256

typedef struct {

	int possible_directions[4];
	int visited_directions[4];

} _g_node;

//note, these directions are in specific order
enum heading { EAST, SOUTH, WEST, NORTH };



_g_node Graph[_G_STACK_SIZE];

int get_sr();
int get_hd();
void _g_push(int north, int east, int west, int south);
void _g_pop();
int get_next_direction(int east, int north, int west, int south);
#endif /* GRAPH_H_ */
